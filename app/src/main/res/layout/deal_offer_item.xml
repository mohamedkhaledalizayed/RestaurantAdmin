<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:background="#F5F5F5"

    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:src="@drawable/food"
        android:layout_alignParentStart="true"
        android:id="@+id/deal_photo"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/_5sdp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deal and Offer Name"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="@dimen/_3sdp"
        android:textStyle="bold"
        android:textSize="@dimen/_10ssp"
        android:layout_toEndOf="@+id/deal_photo"
        android:layout_centerVertical="true"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/_5sdp"
        android:layout_centerVertical="true"
        >

        <belka.us.androidtoggleswitch.widgets.ToggleSwitch
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_25sdp"
            custom:textToggleLeft="@string/off"
            custom:textToggleRight="ON"
            android:textSize="@dimen/_8ssp"
            custom:activeBgColor="@color/colorPrimary"
            custom:inactiveBgColor="#FFF"
            custom:toggleWidth="@dimen/_45sdp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$ 28:00"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="@dimen/_3sdp"
            android:textStyle="bold"
            android:textSize="@dimen/_12ssp"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc"
        android:layout_below="@id/deal_photo"
        android:layout_marginTop="@dimen/_3sdp"
        ></LinearLayout>


</RelativeLayout>
</layout>