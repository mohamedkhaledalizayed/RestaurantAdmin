<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background_color"
    tools:context=".views.activity.SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:id="@+id/layout_container"
        android:background="@drawable/new_order_item_bg"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginBottom="20dp"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/language"
                android:id="@+id/lang"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                />

            <belka.us.androidtoggleswitch.widgets.ToggleSwitch
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_25sdp"
                custom:textToggleLeft="EN"
                custom:textToggleRight="FR"
                android:id="@+id/language_option"
                android:textSize="@dimen/_8ssp"
                custom:activeBgColor="@color/colorPrimary"
                custom:inactiveBgColor="#FFF"
                android:layout_alignParentEnd="true"
                custom:toggleWidth="@dimen/_45sdp"/>

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>